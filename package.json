{
  "name": "ds-documentation",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "description": "Монорепозиторий дизайн-системы",
  "bin": {
    "pcbl-fe": "@pcbl/fe-scripts/bin/pcbl-fe.js"
  },
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "deploy:gh": "GIT_USER=curillaenator USE_SSH=true yarn deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "cm": "npx lint-staged && npx git-cz",
    "setVersion": "pcbl-fe setVersion",
    "typecheck": "npx tsc",
    "prepare": "husky install",
    "lint": "npx eslint ./ --fix --quiet"
  },
  "dependencies": {
    "@docusaurus/core": "2.3.1",
    "@docusaurus/preset-classic": "2.3.1",
    "@mdx-js/react": "1.6.22",
    "classnames": "2.3.1",
    "clsx": "1.2.1",
    "docusaurus-lunr-search": "2.3.2",
    "docusaurus-plugin-sass": "0.2.3",
    "hex-rgb": "5.0.0",
    "javascript-color-gradient": "2.4.4",
    "prism-react-renderer": "1.3.5",
    "raw-loader": "4.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "react-scroll": "1.8.3",
    "rgb-hex": "4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@docusaurus/module-type-aliases": "2.3.1",
    "@ecp/eslint-config-pnp": "1.2.0",
    "@ecp/yarn-ecp-ldap-auth-plugin": "1.0.2",
    "@rollup/plugin-image": "3.0.1",
    "@rollup/plugin-typescript": "9.0.2",
    "@tsconfig/docusaurus": "1.0.5",
    "@types/react-dom": "17.0.9",
    "@types/rimraf": "3.0.2",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.9.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-testing-library": "5.0.1",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "rollup": "3.2.5",
    "rollup-plugin-styles": "4.0.0",
    "sass": "1.53.0",
    "typescript": "4.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 172,
      "disableScopeLowerCase": true,
      "types": {
        "feat": {
          "description": "A new feature",
          "value": "feat"
        },
        "fix": {
          "description": "A bug fix",
          "value": "fix"
        },
        "ci": {
          "description": "CI related changes",
          "value": "ci"
        },
        "chore": {
          "value": "chore",
          "description": "Build process or auxiliary tool changes"
        },
        "docs": {
          "value": "docs",
          "description": "Documentation only changes"
        },
        "style": {
          "value": "style",
          "description": "Markup, white-space, formatting, missing semi-colons..."
        },
        "refactor": {
          "description": "A code change that neither fixes a bug or adds a feature",
          "value": "refactor"
        },
        "perf": {
          "description": "A code change that improves performance",
          "value": "perf"
        },
        "test": {
          "value": "test",
          "description": "Adding missing tests"
        }
      },
      "commitUrlFormat": "https://bitbucket.pcbltools.ru/bitbucket/projects/EDUPOWER/repos/uikit/commits/{{hash}}",
      "compareUrlFormat": "https://bitbucket.pcbltools.ru/bitbucket/projects/EDUPOWER/repos/uikit/commits/{{hash}}"
    }
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.14"
  },
  "workspaces": {
    "packages": [
      "tools/*",
      "packages/common-types",
      "packages/uikit-utils",
      "packages/baseUI/*",
      "packages/xyz/*"
    ]
  },
  "packageManager": "yarn@3.2.0"
}
