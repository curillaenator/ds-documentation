{
  "extends": "@pcbl/fe-scripts/configs/tsconfig.json",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "build",
    "paths": {
      "*": ["*"]
    },
    "declaration": true,
    "noEmit": false,
    "target": "es2019",
    "downlevelIteration": true,
    "types": ["react", "node"]
  },
  "include": ["src", "@types"],
  "exclude": ["**/stories", "**/*.stories.*", "**/*.test.*"]
}
