{
  "extends": "@pcbl/fe-scripts/configs/tsconfig.json",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "build",
    "paths": {
      "*": ["*"]
    },
    "declaration": true,
    "noEmit": false,
    "target": "es5",
    "downlevelIteration": true,
    "types": ["react"]
  },
  "include": ["src"],
  "exclude": ["**/stories/", "**/scripts/", "**/*.test.*"]
}
